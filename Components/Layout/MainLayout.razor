@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <!-- Centered search input -->
            <MudTextField T="string"
                          StartIcon="Icons.Material.Filled.Search"
                          Placeholder="Search..."
                          Variant="Variant.Outlined"
                          Color="Color.Primary"
                          Class="search-input" />

            <!-- Signin button -->
            <MudButton Variant="Variant.Outlined">Signin</MudButton>
        </div>


        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
<style>
    .search-input .mud-input-control {
        border: 2px solid #007bff; /* Blue border (primary color) */
        border-radius: 8px; /* Optional: rounded corners */
        padding: 4px 8px;
        width: 100%; /* Full width of the parent container */
        max-width: 400px; /* Optional: Limit the maximum width */ /* Optional: add padding inside the input */
    }

    .search-input .mud-input-root {
        padding: 0px; /* Remove extra padding if needed */
        width: 100%; /* Full width of the parent container */
        max-width: 400px;
    }
</style>